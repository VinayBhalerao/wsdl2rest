<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:cxf="http://camel.apache.org/schema/cxf"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
        
    <cxf:cxfEndpoint id="cxfConsumer" 
        address="http://localhost:8080/AddressService/AddressPort" 
        serviceClass="org.slosc.wsdl2rest.test.rpclit.Address" />
        
    <camelContext id="cxfws" xmlns="http://camel.apache.org/schema/spring">
        <route id="consumerRoute">
            <from uri="cxf:bean:cxfConsumer" />
            <transform>
                <simple>Hello ${body}</simple>
            </transform>
        </route>
    </camelContext>

</beans>