<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:cxf="http://camel.apache.org/schema/cxf"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
        
    <cxf:rsServer id="cxfConsumer" 
        address="http://localhost:8080/rpclit" 
        serviceClass="org.slosc.wsdl2rest.test.rpclit.Address">
        <cxf:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </cxf:providers>
    </cxf:rsServer>
        
    <bean id="addressBean" class="org.slosc.wsdl2rest.test.rpclit.AddressBean"/>
    
    <camelContext id="cxfrs" xmlns="http://camel.apache.org/schema/spring">
        <dataFormats>
          <json id="json" library="Jackson"/>
        </dataFormats>
        <route id="consumerRoute">
            <from uri="cxfrs:bean:cxfConsumer" />
            <log loggingLevel="INFO" message="${header.operationName}"/>
            <choice>
                <when>
                    <simple>${header.operationName} == 'listAddresses'</simple>
                    <to uri="bean:addressBean?method=listAddresses"/>
                </when>
                <when>
                    <simple>${header.operationName} == 'getAddress'</simple>
                    <to uri="bean:addressBean?method=getAddress"/>
                </when>
                <when>
                    <simple>${header.operationName} == 'addAddress'</simple>
                    <unmarshal ref="json"/>
                    <log loggingLevel="INFO" message="${body}"/>
                    <to uri="bean:addressBean?method=addAddress(${body[name]})"/>
                </when>
                <when>
                    <simple>${header.operationName} == 'updAddress'</simple>
                    <unmarshal ref="json"/>
                    <setHeader headerName="addressIdPath">
                        <simple>${header.CamelHttpPath.substring(${header.CamelHttpPath.lastIndexOf('/')})}</simple>        
                    </setHeader>
                    <setHeader headerName="addressId">
                        <simple>${header.addressIdPath.substring(1)}</simple>        
                    </setHeader>
                    <log loggingLevel="INFO" message="${header.addressId},${body}"/>
                    <to uri="bean:addressBean?method=updAddress(${header.addressId},${body[name]})"/>
                </when>
                <when>
                    <simple>${header.operationName} == 'delAddress'</simple>
                    <to uri="bean:addressBean?method=delAddress"/>
                </when>
            </choice>
        </route>
    </camelContext>

</beans>